<div class="ui main container">
    <!-- UZar container -->
    <div class="ui two column grid" id="uzarSticky">
        <!-- UZar Card Info -->
        <div class="ui column">
            <div class="ui sticky">
                <H5 id="userName" class="ui inverted center aligned header">{{user.name}}</H5>
            </div>

            <div class="ui sticky centered large card image">
                <div>
                    <img class="ui rounded fluid edit image" src="https://media.giphy.com/media/Q2w02BCP1Nvqg/giphy.gif">
                    <button class="ui circular edit icon editBtn button" id="userEdit">
                        <i class="edit icon"></i>
                    </button>
                </div>
                {{!-- About uZar --}}
                <div class="content">
                    <div class="meta">
                        <span class="date">Joined in 2013</span>
