                    </div>
                </div>
            </div>
        </div>
        {{!-- User Edit modal --}}
        <div action="" method="POST" class="ui modal form userEdit">
            <i class="close icon"></i>
            <div class="header">
                Edit Profile
            </div>
            <div class="content">
                <label>Name</label>
                <div class="two fields">
                    <div class="field">
                        <input name="name" type="text" id="firstName" placeholder="First Name...">
                    </div>
                    <div class="field">
                        <label>Year Joined ( 4 digit )</label>
                        <input type="text" maxlength="4" placeholder="Year">
                    </div>
                </div>
                <div class="field">
                    <label>Email</label>
                    <input name="email" type="text" id="signUpEmail" placeholder="Email...">
                </div>
            </div>
            <div class="actions">
                <div class="ui black deny button">
                    Cancel
                </div>
                <input id="signUp" type="submit" name="Sign up" class="ui positive button">
            </div>
        </div>

